<div class="container">
<h1>Edit task</h1>
<%= simple_form_for(@task) do |f| %>
<div class="form-group">
<strong><%= f.label :title %></strong>
<%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
<strong><%= f.label :details %></strong>
<%= f.text_field :details, class: 'form-control' %>
</div>

<div class="form-completed">
<%= f.check_box :completed, class: 'form-checkbox' %>
<%= f.label :completed, "Completed", class: 'form-label' %></span>
</div>

<div class="input"><%= f.submit class: 'btn btn-primary' %></div>
<% end %>
<div class="border-top">
<div class="back-link">
<i class="fas fa-redo"></i><span><%= link_to "Back to all tasks", tasks_path %></span>
</div>
</div>
</div>