<h2> My tasks </h2>
	<% @tasks.each do |task| %>
	<li><%= link_to task.title, task_path(task) %></li>
		<% if task.completed? %>
			<p><input type="checkbox" id="task" name="task" checked>
		<% else %>
			<p><input type="checkbox" id="task" name="task" unchecked>
			   <% end %>
	<% end %>

			<p><%= link_to "Create a new task", tasks_new_path %></p>