<div class="container">
<div class="header">
  <h1><%= @task.title %></h1>
</div>
  <div class="task-description">
    <p class="alert alert-warning" role="alert"><%= @task.details %></p>
    <% if @task.completed? %>
    <div><i class="far fa-check-square"></i><span>This task is completed</span></div>
    <% else %>
    <div><i class="far fa-square"></i><span>This task is not completed</span></div>
  <% end %>
  </div>

<div class="back-link">
  <i class=""></i><span><%= link_to "Edit this task", edit_task_path %></span>
<div class="back-link">

  <i class=""></i><span><%= link_to "Back to all tasks", tasks_path %></span>
</div>
</div>
</div> 
